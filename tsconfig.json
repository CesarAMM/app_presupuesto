{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "outDir": "./src",
    "rootDir": "./dev",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["es2020", "dom", "esnext"]
  },
  "include": ["dev"]
}